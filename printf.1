#include <stdio.h>
/**
*main - entry point
*Return: 0
*
*/
int main() {
    int num = 34;

	printf("The value of num is: %d\n", num);

	printf("Enter a new value for num: ");
	scanf("%d", &num);
	printf("The new value of num is: %d\n", num);

	int hex_num = 0x2A
	printf("The value of hex_num is: %i\n", hex_num);
	printf("Enter a new value for hex_num (in hexadecimal): ");
	scanf("%i", &hex_num;
	printf("The new value of hex_num is: %i\n", hex_num);

	return 0;
}
